/*
* Останавливает модуль TWSI
* Использует регистр r25
*/
.macro TWSI_STOP
	_call TWSI_STOP_act
.endm
//____________________________________________________________________________________
//____________________________________________________________________________________
TWSI_STOP_act:											; метка

	push r25

	ldi		r25, (1<<TWINT) | (1<<TWSTO) | (1<<TWEN)	; формируем сигнал STOP
	WRITE_REG TWCR, r25									; отправляем по шине
	TWSI_Delay_4_1ms

	pop r25

ret	
